# !/bin/bash

# using ruby-install; https://github.com/postmodern/ruby-install#readme
VERSION="0.9.3"

wget https://github.com/postmodern/ruby-install/releases/download/v$VERSION/ruby-install-$VERSION.tar.gz
tar -xzvf ruby-install-$VERSION.tar.gz
rm ruby-install-$VERSION.tzr.gz
cd ruby-install-$VERSION/
sudo make install

# installing latest stable version of ruby
cd
ruby-install ruby
